{% extends 'base.html.twig' %}

{% block title %}Ticket App{% endblock %}

{% block body %}
<h1>Tickets a Assigner</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th>Description</th>
      <th>Statut</th>
      <th>Priorite</th>
      <th>Technicien</th>
      <th>Assigner</th>
    </tr>
  </thead>
  <tbody>
  {% for t in ticket %}
    <tr class="table-dark">
      <td>{{t.id}}</td>
      <td>{{t.ticketdescription}}</td>
      <td>{{t.ticketstatut}}</td>
      <td>{{t.Priority.title}}</td>
      <td>{% if t.technicien is not null %}
            {{t.technicien.id}}
        {% else %}
            N/A
        {% endif %}</td>
      <td><a href="{{path('ticket_assigner',{'id':t.id})}}" class="btn btn-warning"><span class="fa fa-cog"></span></a></td>
    </tr>
    {% endfor %}
   </tbody>
   </table>
{% endblock %}